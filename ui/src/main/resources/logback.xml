<configuration>
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>log/app.log</file>
        <encoder>
            <pattern>%d{HH:mm} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="trace">
        <appender-ref ref="file" />
    </root>
</configuration>